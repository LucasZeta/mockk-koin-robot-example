<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- region Menu -->
    <style name="AppTheme.MenuItem" />
    <style name="AppTheme.MenuItem.Title">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTheme.MenuItem.Description">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.MenuItem.Amount">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Menu" />
    <style name="AppTheme.Menu.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/view_spacing</item>
        <item name="android:paddingBottom">@dimen/view_spacing</item>
    </style>
    <!-- endregion -->

    <!-- region Cart -->
    <style name="AppTheme.Cart"/>
    <style name="AppTheme.Cart.Item" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    <!-- endregion -->

</resources>
